<table class="table table-striped table-dark">
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, edit_task_path(task), remote: true %></td>
        <td class="delete-btn"><%= link_to 'Deletar', task, method: :delete, remote: true, class: 'delete btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

